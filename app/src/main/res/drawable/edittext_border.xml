<!-- res/drawable/edittext_border.xml -->
    <shape xmlns:android="http://schemas.android.com/apk/res/android"
        android:shape="rectangle">

        <!-- Border color and width -->
        <stroke
            android:width="1dp"
            android:color="#FF0000"/> <!-- Red border -->

        <!-- Background color -->
        <solid android:color="#FFFFFF"/> <!-- White background -->

        <!-- Rounded corners (optional) -->
        <corners android:radius="8dp"/>

        <!-- Padding for text inside -->
        <padding
            android:left="8dp"
            android:top="8dp"
            android:right="8dp"
            android:bottom="8dp"/>
    </shape>

